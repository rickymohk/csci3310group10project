<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnFound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Found"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/shb_09" />

            <ImageView
                android:id="@+id/imgPOI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/mappoi" />

            <ImageView
                android:id="@+id/point1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/point1" />

            <ImageView
                android:id="@+id/point2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/point2" />

            <ImageView
                android:id="@+id/point3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/point3" />

            <ImageView
                android:id="@+id/point4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/point4" />

            <Spinner
                android:id="@+id/beaconCheater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/btnFound"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time"
                android:layout_above="@+id/beacon1"
                android:layout_toEndOf="@+id/btnFound" />

            <TextView
                android:id="@+id/beacon1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Becaon1"
                android:layout_above="@+id/beacon2"
                android:layout_toEndOf="@+id/btnFound" />

            <TextView
                android:id="@+id/beacon2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beacon2"
                android:layout_above="@+id/beacon3"
                android:layout_toEndOf="@+id/btnFound" />

            <TextView
                android:id="@+id/beacon3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beacon3"
                android:layout_above="@+id/beacon4"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/beacon4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beacon4"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>